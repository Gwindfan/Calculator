<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dddp.calculator.MainActivity">

    <EditText
        android:layout_width="270dp"
        android:layout_height="60dp"
        android:height="60dp"
        android:editable="false"
        android:gravity="right|bottom"
        android:text=""
        android:id="@+id/editText"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="right|bottom"
        android:text="C"
        android:textSize="20sp"
        android:id="@+id/button_c"
        android:layout_below="@+id/editText"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="right|bottom"
        android:text="DEL"
        android:textSize="20dp"
        android:id="@+id/button_del"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/button_c"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="right|bottom"
        android:text="/"
        android:textSize="20sp"
        android:id="@+id/button_divide"
        android:layout_below="@+id/editText"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/button_del"
        android:layout_marginLeft="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="right|bottom"
        android:text="*"
        android:textSize="20dp"
        android:id="@+id/button_multipy"
        android:layout_below="@+id/editText"
        android:layout_toRightOf="@+id/button_divide"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="7"
        android:textSize="20dp"
        android:gravity="right|bottom"
        android:id="@+id/button_7"
        android:layout_below="@+id/button_c"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="8"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_8"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/button_c"
        android:layout_toRightOf="@+id/button_7"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="9"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_9"
        android:layout_below="@+id/button_c"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_8"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="-"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_minus"
        android:layout_below="@+id/button_c"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_9"
        android:layout_marginTop="10dp" />
<!--the 3rd row -->
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="4"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_4"
        android:layout_below="@+id/button_7"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="5"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_5"
        android:layout_below="@+id/button_7"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_4"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="6"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_6"
        android:layout_below="@+id/button_7"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_5"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="+"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_plus"
        android:layout_below="@+id/button_7"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_6"
        android:layout_marginTop="10dp" />
    <!--The 4th row-->
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="1"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_1"
        android:layout_below="@+id/button_4"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_2"
        android:layout_below="@+id/button_4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_1"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="3"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_3"
        android:layout_below="@+id/button_4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_2"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="130dp"
        android:text="="
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_equal"
        android:layout_below="@+id/button_4"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_3"
        android:layout_marginTop="10dp" />
<!--The 5th row-->
    <Button
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:text="0"
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_0"
        android:layout_below="@+id/button_1"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp" />
    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="."
        android:textSize="20sp"
        android:gravity="right|bottom"
        android:id="@+id/button_dot"
        android:layout_below="@+id/button_1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button_0"
        android:layout_marginTop="10dp" />
</RelativeLayout>
